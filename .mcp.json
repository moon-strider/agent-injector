{
  "mcpServers": {
    "agent-injector": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/moon-strider/agent-injector",
        "agent-injector"
      ],
      "env": {
        "MINIMAX_API_KEY": "${MINIMAX_API_KEY}",
        "MINIMAX_MODEL": "MiniMax-M2.5",
        "MINIMAX_BASE_URL": "https://api.minimax.io/anthropic"
      }
    }
  }
}
