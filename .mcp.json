{
  "mcpServers": {
    "agent-injector": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/moon-strider/agent-injector",
        "agent-injector"
      ],
      "env": {
        "MINIMAX_API_KEY": "${MINIMAX_API_KEY}",
        "MINIMAX_MODEL": "${MINIMAX_MODEL}",
        "MINIMAX_BASE_URL": "${MINIMAX_BASE_URL}"
      }
    }
  }
}
